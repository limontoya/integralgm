 <div class="container special">
  <div class="row">
    <div class="col-sm-6">
      <h2 class="text-primary">Productos y Servicios</h2>
    </div>
    <div class="col-sm-6">
      <div class="panel text-right">
        <%= form_tag "/search/create", method: 'get', remote: true, class: 'navbar-form', role: 'search' do %>
          <div class="input-group-sm"><br>
            <%= text_field_tag :keyword, nil, size: 30, placeholder: "Busca un producto..", class: "form-control"%>
            <span class="input-group-addon-sm"><i class="glyphicon glyphicon-search"></i></span>
          </div>
        <% end %>
      </div>
    </div>

    <br>
    <div id="resultados"></div>

    <br><br><br>

    <!-- Carousel ========================================== -->
    <div align="center" id="myProductCarousel" class="carousel slide carousel-left" data-interval="1500" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myProductCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myProductCarousel" data-slide-to="1"></li>
        <li data-target="#myProductCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img class="first-slide img_thumb_slide" src="/intgm-demarcacion.png" alt="First slide" style="float: left; margin-left:120px; margin-right: 30px;">
          <div class="container">
            <div class="carousel-caption" style="text-align:right;">
              <h1 class="text-primary">Demarcaci&oacute;n de v&iacute;as</h1>
              <p class="text-muted">Todo lo relacionado con pinturas, abrasivos, pistolas</p>
            </div>
          </div>
        </div>
        <div class="item">
          <img class="second-slide img_thumb_slide" src="/intgm-marcas.png" alt="Second slide" style="float: left; margin-left:120px; margin-right: 30px;">
          <div class="container">
            <div class="carousel-caption" style="text-align:right;">
              <h1 class="text-primary">Marcas recomendadas</h1>
              <p class="text-muted">La reparaci&oacute;n de equipos incluye partes de Graco y Tit&aacute;n</p>
            </div>
          </div>
        </div>
        <div class="item">
          <img class="third-slide img_thumb_slide" src="/intgm-reparacion.png" alt="Third slide" style="float: left; margin-left:120px; margin-right: 30px;">
          <div class="container">
            <div class="carousel-caption" style="text-align:right;">
              <h1 class="text-primary">Reparamos equipos</h1>
              <p class="text-muted">Ofrecemos servicios de reparaci&oacute;n de equipos Graco y Tit&aacute;n</p>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myProductCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myProductCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div><!-- /.carousel -->

    <br><br>

    <div class="container special" style="width: 90%; height: 90%;">

<!-- Example row of columns -->
      <div class="row">
        <% @productos.each do |producto| %>
        <div class="col-lg-3 col-md-4 col-xs-6">
          <table class="own_table bg-info">
            <tr align="center">
              <td style="width: 60%; height: 30%;"><br>
                <%= image_tag producto.producto_adjuntos.first.avatar_url , class: 'img_thumb_small' %>
              </td>
            </tr>
            <tr align="center">
              <td style="width: 60%; height: 20%;"><br>
                <h5 class="text-primary"><b><%= producto.nombre.truncate(40) %></b></h5>
              </td>
            </tr>
            <tr>
              <td style="width: 50%; height: 40%; text-decoration: italic;"><br>
                <p class="text-justify text-muted"><i><%= producto.descripcion.truncate(65) %><br></i></p>
              </td>
            </tr>
            <tr>
              <td style="width: 60%; height: 10%;">
              <%= link_to 'Ver mÃ¡s', producto %>
                <% if !current_user.nil? %> 
                  <% if current_user.user_role? %>
                    
                    <%= link_to 'Edit', edit_producto_path(producto) %>
                    <%= link_to 'Destroy', producto, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% end %>
                <% end %>
                
              </td>
            </tr>
          </table>
        </div>
        <%end%>
      </div>
    </div>

<% if !current_user.nil? %> 
  <% if current_user.user_role? %>
    <%= link_to 'New Producto', new_producto_path %>
  <% end %>
<% end %> 

  </div>
</div>