<!DOCTYPE html>
<html>
  <head>
    <title>Integralgm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
    <% unless flash.empty? %>
      <script type="text/javascript">
          <% flash.each do |f| %>
              <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
              toastr['<%= type %>']('<%= f[1] %>', '', {"closeButton": false, "debug": false, "positionClass": "toast-bottom-full-width", "onclick": null, "showDuration": "300", "hideDuration": "1000", "timeOut": "5000", "extendedTimeOut": "1000", "showEasing": "swing", "hideEasing": "linear", "showMethod": "fadeIn", "hideMethod": "fadeOut" });
          <% end %>
      </script>
    <% end %>
    </script>
  </head>

  <body onload="startTime();checkTRM();">
    <!-- NAVBAR -->
    <nav class="navbar navbar-default navbar-fixed-top" onmouseover="checkTRM(); return false">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-left" href="/" style="padding-right: 11em;">
            <img src="../../logo.png" class="img-rounded navbar-logo" alt="Integral GM" width="173" height="60" style="margin-top: 3px;">
          </a>&nbsp;
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <div class="row">
            <div class="col-xs-12 col-md-7">
              <ul class="nav navbar-nav">
                <li class="<%= 'active' if current_page?(root_path) %>">
                  <%= link_to 'Inicio', root_path %></li>

                <li class="<%= 'active' if current_page?(productos_path) %>">
                  <%= link_to 'Productos y Servicios', productos_path %></li>

                <li class="<%= 'active' if current_page?(new_contacto_path) %>">
                  <%= link_to 'ContÃ¡ctenos', new_contacto_path %></li>

                <li class="<%= 'active' if current_page?(aboutus_path) %>">
                  <% @nosotros = aboutus_path + '/1' %>
                  <%= link_to 'Nosotros', @nosotros %></li>
              </ul>
            </div>
            <div class="col-xs-4 col-md-3">
              <ul class="nav navbar-nav pull-right">
                <% if user_signed_in? %>

                  <% if !current_user.nil? && current_user.superadmin_role? %>
                    <li> <%= link_to rails_admin_path do %>
                        <i class="glyphicon glyphicon-dashboard"></i> Admin
                    <% end %> </li>
                  <% end %>   
                  <li><i><%= link_to(truncate(current_user.email, :length => 10, :separator => '@'), edit_user_registration_path) %></i></li>
                  <li><%= link_to('Salir', destroy_user_session_path, :method => :delete) %></li>
                  
                <% else %>
                  
                  <li> <%= link_to new_user_session_path do %>
                      <i class="glyphicon glyphicon-log-in"></i> Login
                  <% end %> </li>
                <% end %>
              </ul>
            </div>
          </div>

          <div class="row text-primary">
            <div class="col-xs-6 col-sm-3"></div>
            <div class="col-xs-8 col-sm-4">
              <div class="text-center" style="margin-top: 14px;" id="txTime"></div>
            </div>
            <div class="col-xs-3 col-sm-2" onclick="redirTRM();return false">
              <div id="IframeWrapper" style="position: relative;" width="200" height="27">
                  <iframe id="frameTRM" width="200" height="27" style="border:0;margin-top: 6px;"></iframe>
                  <div id="iframeBlocker" style="position:absolute; top: 0; left: 0; width:95%; height:95%;background-color:none;opacity:0.1;"></div>
              </div>
            </div>
            <div class="col-xs-6 col-sm-3">
                  <%= form_tag "/search/create", method: 'get', remote: true, class: 'navbar-form  navbar-right', role: 'search' do %>
                <div class="input-group-sm">
                  <%= text_field_tag :keyword, nil, size: 25, placeholder: "Buscar...", class: "form-control"%>
                  <span class="input-group-addon-sm"><i class="glyphicon glyphicon-search"><%= submit_tag " ", class: 'hidden' , data: {target: "#myModalSearch", toggle: "modal"} %></i></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <br><br>
    <!-- MAIN CONTENT-->
  	<div id="main-container" class="container">
      <div class="row">
        <div id="main-content" class="panel panel-info" style="box-shadow: 0px 2px 25px rgba(0, 0, 0, .25);"><br>
          <% if notice %><br>
            <div class="alert alert-info alert-dismissable fade in" role="alert">
            <a href="#" class="close" data-dismiss="notice" aria-label="close">&times;</a>
            <%= notice %></div>
          <% end %>

          <% if alert %><br>
            <div class="alert alert-warning alert-dismissable fade in" role="notice">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= alert %></div>
          <% end %>

          <!-- Modal -->
          <div id="myModalSearch" class="modal fade" role="dialog">
            <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Resultados de la b&uacute;squeda</h4>
                </div>
                <div class="modal-body">
                  <div id="resultados"></div>
                </div>
              </div>

            </div>
          </div>

          <%= yield %>
        </div>
      </div>
    </div>

    <!-- FOOTER -->
    <br>
    <footer class="container">
      <p class="text-primary pull-right"><i class="glyphicon glyphicon-circle-arrow-up"></i>
      &nbsp;<b><a href="#">Subir</a></b></p>
      <p>&copy; 2017 &middot; Integral GM &middot; SAS 
      <% if user_signed_in? %> &middot; En sesi&oacute;n <i><%= current_user.email %> </i><% end %>
      </p>
    </footer><br>
  </body>
</html>

