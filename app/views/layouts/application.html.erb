9<!DOCTYPE html>
<html>
  <head>
    <title>Integralgm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
    <% unless flash.empty? %>
      <script type="text/javascript">
        <% flash.each do |f| %>
          <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
          toastr['<%= type %>']('<%= f[1] %>');
        <% end %>
      </script>
    <% end %>
  </head>

  <body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-left" href="/">
            <img src="../../logo.png" class="img-rounded" alt="Integral GM" width="124" height="48">
          </a>&nbsp;
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if current_page?(root_path) %>">
              <%= link_to 'Inicio', root_path %></li>

            <li class="<%= 'active' if current_page?(productos_path) %>">
              <%= link_to 'Productos y Servicios', productos_path %></li>

            <li class="<%= 'active' if current_page?(new_contacto_path) %>">
              <%= link_to 'ContÃ¡ctenos', new_contacto_path %></li>

            <li class="<%= 'active' if current_page?(aboutus_path) %>">
              <% @nosotros = aboutus_path + '/1' %>
              <%= link_to 'Nosotros', @nosotros %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
             
              <li><%= link_to('Edit registration', edit_user_registration_path) %></li>
              <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>   
              <li><%= link_to('Register', new_user_registration_path)  %></li>     
             
            <% else %>
              
              <li><%= link_to('Login', new_user_session_path)  %></li>  
             
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <br><br>
    <!-- MAIN CONTENT-->
  	<div id="main-container" class="container">
      <div class="row">
        <div id="main-content" class="panel panel-info" style="box-shadow: 0px 2px 25px rgba(0, 0, 0, .25);">
          <%= yield %>
        </div>
      </div>
    </div>

    <!-- FOOTER -->
    <br><br>
    <footer class="container">
      <p class="pull-right"><a href="#">Back to top</a></p>
      <p>&copy; 2017 &middot; Integral GM &middot; SAS </p>
    </footer>
  </body>
</html>
